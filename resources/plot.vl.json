                        ]
                    },
                    "legend": null
                },
                "color": {
                    "field": "type",
                    "legend": {
                        "symbolSize": 75,
                        "title": "symbol"
                    },
                    "scale": {
                        "type": "ordinal",
                        "domain": [
                            "A",
                            "C",
                            "G",
